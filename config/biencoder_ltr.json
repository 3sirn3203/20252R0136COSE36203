{
    "generate_queries": {
        "enable": false,
        "output_path": "data/pseudo_queries.csv",
        "model_name": "models/gemini-2.0-flash",
        "temperature": 0.7,
        "max_tokens": 1024,
        "batch_size": 16,
        "max_rows": 119955
    },
    "data": {
        "path": "data/winemag-data-130k-v2.csv",
        "query_path": "data/pseudo_queries.csv",
        "val_size": 0.1,
        "test_size": 0.1,
        "num_negatives": 2
    },
    "model": {
        "type": "single-stage-retriever",
        "path": "src/model/biencoder_ltr.py",
        "model_name": "all-mpnet-base-v2",
        "max_seq_length": 256
    },
    "train": {
        "re_train": true,
        "epochs": 3,
        "learning_rate": 2e-5,
        "scheduler": "WarmupLinear",
        "warmup_steps": 1000,
        "train_batch_size": 32,
        "weight_decay": 0.01,
        "max_grad_norm": 1.0,
        "use_amp": true,
        "loss_function": "TripletLoss",
        "triplet_margin": 0.5,
        "output_dir": "models/biencoder_ltr_trained",
        "eval_steps": 500,
        "save_best_model": true
    },
    "evaluate": {
        "top_k": 10,
        "batch_size": 256,
        "embedding_path": "data/embeddings/biencoder_ltr_faiss.index"
    },
    "device": "cuda",
    "random_state": 42
}
