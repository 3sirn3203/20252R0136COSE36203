{
    "data": {
        "dataset_path": "data/winemag-data-130k-v2.csv",
        "val_size": 0.05
    },
    "model": {
        "model_name": "sentence-transformers/all-mpnet-base-v2",
        "max_seq_length": 256,
        "batch_size": 16,
        "epochs": 3,
        "learning_rate": 4e-5,
        "mlm_probability": 0.15,
        "weight_decay": 0.01,
        "eval_save_strategy": "epoch",
        "logging_steps": 100
    },
    "random_state": 42,
    "output_dir": "models/fine_tuned_mlm"
}